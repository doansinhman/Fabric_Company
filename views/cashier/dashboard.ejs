<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <% include ../include/header %>
        <link rel='stylesheet' href='/stylesheets/sidenav.css'>
        <script src="/javascripts/cashier_script.js"></script>
        <script>
            $(document).ready(function() {
                let navLock = $('#nav-lock');
                let navReal = $('#nav-real');
                let imgLock = $('#img-lock');
                let imgReal = $('#img-real');
                navReal.hide();
                imgReal.click(function() {
                    $(document.getElementsByClassName('sidenav')).css('padding-top', '30pt');
                });
                imgLock.click(function() {
                    $(document.getElementsByClassName('sidenav')).css('padding-top', '50pt');
                });
            });
        </script>
</head>

<body>
    <% include ../include/navBarUser %>

        <div class="sidenav">
            <a class="nav-link" href="/cashier/manage-receipt">Quản lí phiếu thu</a>
            <a class="nav-link" href="/cashier/manage-payment">Quản lí phiếu chi</a>
        </div>
        <div class="content hero-image" style="overflow: scroll;">
            <% if (plt == 'manage-receipt') { %>
                <% include ./inner_view/manage-receipt %>
                    <% } %>
                        <% if (plt == 'manage-payment') { %>
                            <% include ./inner_view/manage-payment %>
                                <% } %>
        </div>

</body>

<script>
</script>

</html>